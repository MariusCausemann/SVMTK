

#!/bin/bash
rm  -r ./*.extraction
rm  -r ./*.remesh
rm  -r ./*.smooth
rm  -r ./*mesh

ln -s src/extraction lh.pial.extraction
ln -s src/extraction rh.pial.extraction
ln -s src/extraction lh.white.extraction
ln -s src/extraction rh.white.extraction
ln -s src/extraction full.extraction

ln -s src/remesh lh.pial.remesh
ln -s src/remesh rh.pial.remesh
ln -s src/remesh lh.white.remesh
ln -s src/remesh rh.white.remesh


ln -s src/smooth lh.pial.smooth
ln -s src/smooth rh.pial.smooth
ln -s src/smooth lh.white.smooth
ln -s src/smooth rh.white.smooth


ln -s src/mesh lh.pial.mesh
ln -s src/mesh rh.pial.mesh
ln -s src/mesh lh.white.mesh
ln -s src/mesh rh.white.mesh


#ln -s src/extraction+mesh lh.pial.extraction+mesh

